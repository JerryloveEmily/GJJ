<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/string_welcome"
            android:background="@drawable/image_bg"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide" />

        <LinearLayout
            android:id="@+id/gl_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_gjj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_my_gjj"
                    android:contentDescription="@string/app_name"
                    android:drawableTop="@drawable/ic_my_gjj"
                    android:text="@string/string_my_gjj"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:clickable="true"
                    />

                <TextView
                    android:id="@+id/tv_policy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/color_policy"
                    android:contentDescription="@string/app_name"
                    android:drawableTop="@drawable/ic_policy"
                    android:text="@string/string_policy"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:clickable="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_loan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/color_flow"
                    android:contentDescription="@string/app_name"
                    android:drawableTop="@drawable/ic_loan"
                    android:text="@string/string_loan"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:clickable="true"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_guide"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_guide"
                        android:contentDescription="@string/app_name"
                        android:drawableTop="@drawable/ic_guide"
                        android:gravity="center"
                        android:text="@string/string_guide"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        android:clickable="true"
                        />

                    <TextView
                        android:id="@+id/tv_material"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/color_material"
                        android:contentDescription="@string/app_name"
                        android:drawableTop="@drawable/ic_material"
                        android:text="@string/string_material"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:textSize="18sp"
                        android:clickable="true"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <GridView
            android:id="@+id/gv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:cacheColorHint="@color/transparent"
            android:horizontalSpacing="10dp"
            android:listSelector="@color/transparent"
            android:numColumns="2"
            android:verticalSpacing="10dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
