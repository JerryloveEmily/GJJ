<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:text="@string/string_welcome" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide"/>

        <LinearLayout
            android:id="@+id/gl_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_my_gjj"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_my_gjj"
                    android:contentDescription="@string/app_name"
                    android:background="@color/color_my_gjj"
                    />
                <ImageView
                    android:id="@+id/iv_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_policy"
                    android:contentDescription="@string/app_name"
                    android:background="@color/color_policy"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_loan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_loan"
                    android:contentDescription="@string/app_name"
                    android:background="@color/color_flow"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:id="@+id/iv_guide"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:padding="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_guide"
                        android:contentDescription="@string/app_name"
                        android:background="@color/color_guide"
                        />
                    <ImageView
                        android:id="@+id/iv_material"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_material"
                        android:contentDescription="@string/app_name"
                        android:background="@color/color_material"
                        />
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <GridView
            android:id="@+id/gv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:verticalSpacing="10dp"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>
